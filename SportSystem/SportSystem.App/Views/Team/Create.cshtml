@model SportSystem.App.InputModels.TeamInputModel

@{
    ViewBag.Title = "Create Team";
}

<h2>@ViewBag.Title</h2>
<div class="row">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        ;
        @Html.ValidationSummary(true)
        ;

        @Html.LabelFor(m => Model.Name)
        @Html.EditorFor(m => Model.Name)
        @Html.ValidationMessageFor(m => m.Name)
        ;
        <br />
        @Html.LabelFor(m => Model.NickName)
        @Html.EditorFor(m => Model.NickName)
        @Html.ValidationMessageFor(m => m.NickName)
        ;
        <br />
        @Html.LabelFor(m => Model.Website)
        @Html.EditorFor(m => Model.Website)
        @Html.ValidationMessageFor(m => m.Website)
        ;
        <br/>
        @Html.LabelFor(m => Model.DateFounded)
        @Html.EditorFor(m => Model.DateFounded)
        @Html.ValidationMessageFor(m => m.DateFounded)
        ;
        <br/>
        @Html.LabelFor(m => Model.PlayersIds)
        @Html.DropDownListFor(m => Model.PlayersIds, (IEnumerable<SelectListItem>)ViewBag.Players)
        @Html.ValidationMessageFor(m => m.PlayersIds)

        @Html.LabelFor(m => Model.PlayersIds)
        @Html.DropDownListFor(m => Model.PlayersIds, (IEnumerable<SelectListItem>)ViewBag.Players)
        @Html.ValidationMessageFor(m => m.PlayersIds)
        ;

        <input type="submit" name="submit" value="Add Team" />
    }

    <div id="results"></div>
</div>

@section scripts {
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
